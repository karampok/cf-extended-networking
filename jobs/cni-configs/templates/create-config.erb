#!/bin/bash

set -eu
SUBNET="10.200.$(hostname -I | cut -d' ' -f1 | cut -d'.' -f4).0/24"
cat > /var/vcap/data/cni-configs/chained.conflist <<EOF
  {
  "cniVersion": "0.3.1",
  "name": "mynet",
  "plugins": [
     {
        "type": "bridge",
        "bridge": "mynet0",
        "isGateway": true,
        "ipMasq": true,
        "hairpinMode": false,
        "ipam": {
            "type": "host-local",
            "subnet": "$SUBNET",
            "routes": [
                { "dst": "0.0.0.0/0" }
            ],
         "dataDir": "/run/ipam-out-net"
        },
        "dns": {
          "nameservers": [ "8.8.8.8" ]
        }
    },
    {
      "type":"ipmasq",
      "tag":"CNI-SNAT-X",
      "capabilities": {"masqEntries": true}
    },
    {
      "type": "portmap",
      "capabilities": {"portMappings": true},
      "snat": false
      },
      {
      "type":"noop",
      "debug":true,
      "capabilities": {
           "portMappings": true,
           "metadata": true,
           "masqEntries": true
      },
      "debugDir": "/var/vcap/data/cni-configs/net-debug"
    }
  ]
}
EOF
